# Stage 1: Build
FROM golang:1.22-alpine AS builder
WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o relay ./cmd/relay

# Stage 2: Runtime
FROM alpine:3.20
WORKDIR /app
COPY --from=builder /app/relay .
COPY .env .env
EXPOSE 8080

CMD ["./relay"]
